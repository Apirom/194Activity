@model IEnumerable<WebApplication29.Monk>

@{
    ViewBag.Title = "ฐานข้อมูลสามเณร วัดโชติกุณสุวรรณณาราม";
}

<h2>ฐานข้อมูลสามเณร วัดโชติกุณสุวรรณณาราม</h2>

<p>
    @Html.ActionLink("เพิ่มข้อมูลสามเณร", "Create")




    @using (Html.BeginForm("Index2", "Monks", FormMethod.Get))
    {
        <p>
            Cid: @Html.TextBox("SearchString") <br />
            <input type="submit" value="Filter" />
        </p>
    }

    </p>
    <table class="table">
        <tr>
            <th>
                @Html.Label("เลขบัตรประจำตัวประชาชน")
            </th>

            <th>
                @Html.Label("ชื่อ")
            </th>
            <th>
                @Html.Label("นามสุกล")
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cid)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Fname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lname)
                </td>
                <td>
                    @Html.ActionLink("แก้ไขข้อมูล", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("ดูรายละเอียด", "Details", new { id = item.Id }) |
                    @Html.ActionLink("ลบข้อมูล", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
